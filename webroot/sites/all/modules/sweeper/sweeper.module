	}
	// echo "<pre>".print_r($user)."</pre>";
	// 	echo "<h3>{$plan}</h3>";
	switch ($plan) 
	{
		case "Month-to-Month":
			$subscription = 1;
			break;
		case "Month-to-month":
			$subscription = 1;
			break;
		case "Quarterly":
			$subscription = 2;
			break;
		case "Semi-Annual":
			$subscription = 3;
			break;
		case "Annual":
			$subscription = 4;
